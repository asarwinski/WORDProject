<UserControl x:Class="WORDProjectUI.Views.Tabs.ExaminersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WORDProjectUI.Views.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Examiner:"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="Examinee:" Margin="5,0"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Text="Category:" Margin="5,0"/>
        <TextBlock Grid.Column="4" Grid.Row="1" Text="Result:" Margin="5,0"/>
        <TextBlock Grid.Column="5" Grid.Row="1" Text="Date:" Margin="5,0"/>
        <ComboBox x:Name="ExaminerFilter" Grid.Column="1" Grid.Row="2" Margin="0,0,5,5" MinWidth="100">
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="Diana Rojas"/>
            <ComboBoxItem Content="Cassandra Briggs"/>
            <ComboBoxItem Content="Davian Wheeler"/>
            <ComboBoxItem Content="Oliver Evans"/>
            <ComboBoxItem Content="Zaiden Brock"/>
            <ComboBoxItem Content="Hailey Blake"/>
        </ComboBox>
        <ComboBox x:Name="ExamineeFilter" Grid.Column="2" Grid.Row="2" Margin="5,0,5,5" MinWidth="100">
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="Raegan Stafford"/>
            <ComboBoxItem Content="Holly Barrera"/>
            <ComboBoxItem Content="Conner Ford"/>
            <ComboBoxItem Content="Alexzander Carter"/>
            <ComboBoxItem Content="Kyson Hahn"/>
            <ComboBoxItem Content="Michaela Richards"/>
        </ComboBox>
        <ComboBox x:Name="CategoryFilter" Grid.Column="3" Grid.Row="2" Margin="5,0,5,5" MinWidth="25">
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <ComboBox x:Name="ResultFilter" Grid.Column="4" Grid.Row="2" Margin="5,0,5,5" MinWidth="75">
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="Passed"/>
            <ComboBoxItem Content="Failed"/>
        </ComboBox>
        <DatePicker x:Name="DateFilter" Grid.Column="5" Grid.Row="2" BorderBrush="{x:Null}"/>
        <Button Grid.Column="7" Grid.Row="2" Content="Search" Margin="5,0,5,5" Padding="5,0"/>
        <DataGrid Grid.Column="1" Grid.ColumnSpan="7" Grid.Row="3" x:Name="ExaminersDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="2*"/>
                <DataGridTextColumn Header="Surname" Width="2*"/>
                <DataGridTextColumn Header="Pesel" Width="1*"/>
                <DataGridTextColumn Header="Birth Date" Width="2*"/>
                <DataGridTextColumn Header="Address" Width="2*"/>
                <DataGridTextColumn Header="Categories" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
